{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "types",
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "strict": true,
    "target": "ES6"
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}